extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 CLAV: Classificação e Avaliação da Informação Pública
            .w3-container
                h4 Diplomas
                table.w3-table-all
                    tr
                        th Data
                        th Tipo
                        th Numero
                        th Sumario
                    each diploma in lista
                        tr
                            td= diploma.data
                            td= diploma.tipo
                            td= diploma.numero
                            td= diploma.sumario
                            td
                                a(href='/legislacao/' + diploma.id)= diploma.numero
            footer.w3-container.w3-teal